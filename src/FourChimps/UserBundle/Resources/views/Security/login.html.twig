{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

<h1>Login</h1>
<br/>
{% if error %}
<div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <strong>Login Error</strong>
    <p>
        {{ error|trans({}, 'FOSUserBundle') }}
    </p>
    <p>
        <a class="btn btn-danger" href="{{ path('fos_user_resetting_request')}}">Reset Password</a>
    </p>
</div>
{% endif %}

<form class= "well form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="control-group ">
        <label class="control-label form required" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>
    </div>

    <div class="control-group ">
        <label class="control-label form required" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            <input type="password" id="password" name="_password" />
        </div>
    </div>

    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
            </label>
        </div>
    </div>

    <div class="form-actions">
        <input class="btn"  type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>

</form>
{% endblock fos_user_content %}
