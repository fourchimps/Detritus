{% form_theme form 'FourChimpsThemeBundle:Form:theme.html.twig' %}
<h1>Edit Profile</h1>
<br/>
<form class= "well form-horizontal" action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
    {{ form_widget(form) }}

    <div class="form-actions">
        <input class="btn" type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>
